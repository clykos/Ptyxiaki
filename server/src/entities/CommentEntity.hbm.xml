<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.CommentEntity" table="comment" schema="" catalog="project">
        <id name="idcomment" column="idcomment"/>
        <property name="idreports" column="idreports"/>
        <property name="idusers" column="idusers"/>
        <property name="text" column="text"/>


        <many-to-one name="report"
                     class="entities.ReportsEntity"
                     column="idreports"
                     cascade="save-update"
                insert="false" update="false">
        </many-to-one>


    </class>
</hibernate-mapping>